<Window x:Class="WPFMannsMoneyRegister.Windows.AddRecurringTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMannsMoneyRegister.Windows"
        mc:Ignorable="d"
        d:Height="250" d:Width="250"
        Title="AddRecurringTransactionWindow" Height="300" Width="400"
        Closed="Window_Closed" Loaded="Window_Loaded">
    <Grid Background="DarkGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <TreeView x:Name="recurringTransactionTreeView" Grid.Row="0" Grid.Column="0">
            
        </TreeView>
        <Button  Content="Cancel" Width="70" Height="30" HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Row="1" Grid.Column="0" />
        <Button  Content="Save" Width="100" Height="30" HorizontalAlignment="Right" Margin="15,0,0,0" Grid.Row="1" Grid.Column="0" />
    </Grid>
</Window>
