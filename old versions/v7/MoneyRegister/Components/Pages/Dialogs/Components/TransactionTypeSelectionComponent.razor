<MudSelect @bind-Value="@Value" Label="@Label" tabindex="@Index">
    @foreach (Enums.TransactionType entryType in Enum.GetValues(typeof(Enums.TransactionType)))
    {
        <MudSelectItem Value="@entryType">@entryType.ToString()</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter]
    public Enums.TransactionType Value
    {
        get
        {
            return _value;
        }
        set
        {
            if (value == _value) return;
            _value = value;

            if (ValueChanged.HasDelegate)
            {
                ValueChanged.InvokeAsync(_value);
            }
        }
    }

    [Parameter] public int Index { get; set; } = 0;
    [Parameter] public EventCallback<Enums.TransactionType> ValueChanged { get; set; }
    [Parameter] public string Label { get; set; }

    private Enums.TransactionType _value;


    protected override async Task OnInitializedAsync()
    {
    }
}
